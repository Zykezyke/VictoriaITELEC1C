@model IEnumerable<Student>;

<div>Student List</div>


<a class="btn btn-primary" asp-controller="Student" asp-action="AddStudent">Add Student</a>

<table class="table table-dark">

    <tr>
        <th colspan="7">Student</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Course</td>
        <td>Admission Date</td>
        <td>Email</td>
        <td>GPA</td>
        <td>Details</td>
        <td>Update Student</td>


    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate.ToString("MM/dd/yyyy")</td>
            <td>@student.Email</td>
            <td>@student.GPA</td>
            <td><a class="btn btn-light" asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a></td>
            <td><a class="btn btn-light" asp-action="UpdateStudent" asp-route-id="@student.Id">Update Student</a> </td>
        </tr>
    }
</table>