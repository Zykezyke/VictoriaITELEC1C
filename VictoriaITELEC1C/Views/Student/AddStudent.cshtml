@model Student;
<h1>Add a new student</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="AddStudent" asp-controller="Student" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col">
            <label asp-for="StudentPfp">Student Profile Photo</label>
            <input type="file" class="form-control" aria-describedby="PhotoHelp" placeholder="Upload image" asp-for="StudentPfp">
        </div>
    <div class="form-group col">
            <label asp-for="FirstName">First Name</label>
            <input type="text" class="form-control" aria-describedby="FirstHelp" placeholder="Enter Student First Name" asp-for="FirstName">
       </div>
    <div class="form-group col">
            <label asp-for="LastName">Last Name</label>
            <input type="text" class="form-control" aria-describedby="LastHelp" placeholder="Enter Student Last Name" asp-for="LastName">
    </div>
    </div>
    <div class="form-group">
        <label asp-for="GPA">GPA</label>
        <input type="number" step="0.001" class="form-control" aria-describedby="GPAHelp" placeholder="Enter Student GPA" asp-for="GPA">
    </div>
    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select class="form-control form-select" asp-items = "@Html.GetEnumSelectList(typeof(Course))" aria-describedby="CourseHelp" placeholder="Select Student Course" asp-for="Course">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="AdmissionDate">Admission Date</label>
        <input type="date" class="form-control" aria-describedby="AdmHelp" asp-for="AdmissionDate">
    </div>
    <div class="form-group">
        <label asp-for="Email">Email address</label>
        <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter Student Email" asp-for="Email">
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone Number</label>
        <input type="text" class="form-control" aria-describedby="PhoneHelp" placeholder="Enter Student Phone" asp-for="Phone">
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" class="form-control" aria-describedby="AddressHelp" placeholder="Enter Student Address" asp-for="Address">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<a class="btn btn-dark" type="button" asp-controller="Student" asp-action="Index">
