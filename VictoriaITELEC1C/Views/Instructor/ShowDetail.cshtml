@model Instructor;
@{
    string status = Model.IsTenured == true ? "Permanent" : "Probationary";
    var today = DateTime.Now;
    var joblen = today.Subtract(Model.HiringDate);
}

<h1>Instructor Details</h1>

<table class="table table-dark">
    <tr>
        <th>Id</th>
        <td>@Model.InstructorId</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.InsLast</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.InsFirst</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.InsAdd</td>
    </tr>
    <tr>
        <th>Contact</th>
        <td>@Model.InsPhone</td>
    </tr>
    <tr>
        <th>Employment Status</th>
        <td>@status</td>
    </tr>
    <tr>
        <th>Rank</th>
        <td>@Model.InstructorRank</td>
    </tr>
    <tr>
        <th>HiringDate</th>
        <td>@Model.HiringDate.ToString("MM/dd/yyyy")</td>
    </tr>
    <tr>
        <th>Job length</th>
        <td>@joblen.Days days</td>
    </tr>
</table>

<div class="text-center">
    <a class="btn btn-dark" type="button" asp-controller="Instructor" asp-action="Index">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="18" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"></path>
        </svg> Go Back
    </a>
</div>