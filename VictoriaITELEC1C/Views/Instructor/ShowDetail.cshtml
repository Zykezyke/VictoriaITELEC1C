@model Instructor;
@{
    string status = Model.IsTenured == true ? "Permanent" : "Probationary";
 }

<h1>Instructor Details</h1>

<table class="table table-dark">
    <tr>
        <th>Id</th>
        <td>@Model.InstructorId</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.InsLast</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.InsFirst</td>
    </tr>
    <tr>
        <th>Employment Status</th>
        <td>@status</td>
    </tr>
    <tr>
        <th>Rank</th>
        <td>@Model.InstructorRank</td>
    </tr>
    <tr>
        <th>HiringDate</th>
        <td>@Model.HiringDate</td>
    </tr>
</table>