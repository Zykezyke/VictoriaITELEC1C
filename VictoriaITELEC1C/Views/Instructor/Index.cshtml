@model IEnumerable<Instructor>;
<div>Instructor List</div>


<table class="table table-dark">

    <tr>
        <th colspan="6">Instructor</th>
    </tr>

    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Employment Status</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Show Details</td>
    </tr>
    @foreach (var instructor in Model)
    {
        string status = @instructor.IsTenured == true ? "Permanent" : "Probationary";
        <tr>
            <td>@instructor.InstructorId</td>
            <td>@instructor.InsFirst @instructor.InsLast</td>
            <td>@status</td>
            <td>@instructor.InstructorRank</td>
            <td>@instructor.HiringDate</td>
            <td><a class = "btn btn-light" asp-action="ShowDetail" asp-route-id="@instructor.InstructorId">Show Details</a></td>
        </tr>
    }
</table>