@model Instructor;
<h1>Update instructor</h1>
<form asp-action="UpdateInstructor" asp-controller="Instructor" method="post">
    <div class="row">
        <div class="form-group col">
            <label asp-for="InsFirst">First Name</label>
            <input type="text" class="form-control" placeholder="Enter Instructor First Name" asp-for="InsFirst">
        </div>
        <div class="form-group col">
            <label asp-for="InsLast">Last Name</label>
            <input type="text" class="form-control" placeholder="Enter Instructor Last Name" asp-for="InsLast">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="IsTenured">Employment Status</label> <br />
        <input type="checkbox" class="form-check-input form-check-inline" placeholder="Employment Status" value="true" asp-for="IsTenured">
        <label class="form-check-label" asp-for="IsTenured">Permanent</label>
    </div>
    <div class="form-group">
        <label asp-for="InstructorRank">Rank</label>
        <select class="form-control form-select" asp-items="@Html.GetEnumSelectList(typeof(Rank))" aria-describedby="CourseHelp" placeholder="Select Instructor Course" asp-for="InstructorRank">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
        <input type="date" class="form-control" asp-for="HiringDate">
    </div>
    <div class="form-group">
        <label asp-for="InsPhone">Phone Number</label>
        <input type="text" class="form-control" placeholder="Enter Student Phone" asp-for="InsPhone">
    </div>
    <div class="form-group">
        <label asp-for="InsAdd">Address</label>
        <input type="text" class="form-control" placeholder="Enter Student Address" asp-for="InsAdd">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

